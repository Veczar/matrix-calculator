<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.GridPane?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pk.wieik.matrixestest.HelloController">
    <TitledPane text="Matrix A Input" expanded="true">
        <VBox spacing="5.0" >
            <HBox spacing="5.0">
                <Label text="Rows:"/>
                <Spinner fx:id="matrixARows" min="1" max="10" initialValue="4"/>
                <Label text="Columns:"/>
                <Spinner fx:id="matrixAColumns" min="1" max="10" initialValue="4"/>
            </HBox>
            <GridPane fx:id="matrixAGrid" hgap="5" vgap="5"/>
        </VBox>
    </TitledPane>
    <TitledPane text="Matrix B Input" expanded="true">
        <VBox spacing="5.0">
            <HBox spacing="5.0">
                <Label text="Rows:"/>
                <Spinner fx:id="matrixBRows" min="1" max="10" initialValue="4"/>
                <Label text="Columns:"/>
                <Spinner fx:id="matrixBColumns" min="1" max="10" initialValue="4"/>
            </HBox>
            <GridPane fx:id="matrixBGrid" hgap="5" vgap="5"/>
        </VBox>
    </TitledPane>
    <Button text="Extract Matrices" onAction="#extractMatrices"/>
</VBox>